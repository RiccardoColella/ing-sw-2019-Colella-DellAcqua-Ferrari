<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import it.polimi.ingsw.client.ui.gui.BoardPane?>
<?import it.polimi.ingsw.client.ui.gui.ImagePane?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.polimi.ingsw.client.ui.gui.GameController"
            fx:id="window"
            prefHeight="768.0" prefWidth="1366.0">
    <FlowPane fx:id="container">
        <properties width="100vw" height="100vh" wrap="100vw"/>
        <FlowPane fx:id="left">
            <properties width="50%" height="100%" />
            <GridPane fx:id="boardContainer">
                <properties width="100%" height="80%" />
                <columnConstraints>
                    <ColumnConstraints percentWidth="90" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints percentHeight="90" />
                </rowConstraints>
            </GridPane>
            <GridPane fx:id="tile">
                <properties width="100%" height="20%" />
                <columnConstraints>
                    <ColumnConstraints percentWidth="10" />
                    <ColumnConstraints percentWidth="90" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints percentHeight="100" />
                </rowConstraints>
                <ImagePane fx:id="playerTileImg" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ImagePane fx:id="playerBoardImg" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            </GridPane>
        </FlowPane>
        <FlowPane fx:id="right">
            <properties width="47%" height="100%" padding-h="1%" padding-v="1%" />
            <GridPane fx:id="opponentsContainer">
                <properties width="100%" height="20%" padding-h="1%" vgap="0.1%" hgap="2%" wrap="50%"/>
            </GridPane>

            <FlowPane fx:id="stuff">
                <properties width="100%" height="80%" />
            </FlowPane>
        </FlowPane>

    </FlowPane>
</AnchorPane>
